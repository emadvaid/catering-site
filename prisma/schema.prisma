// Prisma schema for NextAuth with roles and SQLite
// Docs: https://next-auth.js.org/adapters/prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            String   @id @default(cuid())
  name          String?
  email         String?  @unique
  emailVerified DateTime?
  image         String?
  role          String   @default("customer") // 'customer', 'owner', 'root'
  password      String?  // <-- Added for credentials auth
  accounts      Account[]
  sessions      Session[]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?
  user               User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model MenuItem {
  id    String  @id @default(cuid())
  name  String
  price Float
  image String? // URL or path to uploaded image
}

model Invoice {
  id        String      @id @default(cuid())
  customer  String
  total     Float
  createdAt DateTime    @default(now())
  items     InvoiceItem[]
}

model InvoiceItem {
  id         String   @id @default(cuid())
  name       String
  qty        Int
  unitPrice  Float
  invoiceId  String
  invoice    Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
}
